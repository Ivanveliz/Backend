<h1>Productos</h1>
<a class="button button--primary" href="/productos/create">Crear un producto</a>
<section class="categorias">


    <table>
        <thead>
            <tr>
                <th>Nombre: </th>

            </tr>
        </thead>
        <tbody>
            <% productos.forEach(producto=> { %>
                <tr>
                    <td class="main--col"><a href="/productos/<%= producto.product_id %>">
                            <%= producto.name %>
                        </a></td>
                    <td class="cell--inline button-col"><a href="/productos/<%= producto.product_id %>/edit">Editar</a>
                        <form action="/productos/<%= producto.product_id %>?_method=DELETE" method="post"
                            class="delete-form">
                            <button type="submit" class="button button--danger button-delete">Borrar</button>

                        </form>
                    </td>
                </tr>
                <%}) %>
        </tbody>
    </table>
</section>
<script src="/js/deleteConfirmation.js" defer></script>