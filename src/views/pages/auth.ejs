<section class="section--auth">
    <form class="form--login" action="/login" method="post">
        <div class="login-container">
            <div class="login-header">
                <img src="/image/logo.jpg" alt="Logo" class="logo">
            </div>
            <div class="input-group">
                <label for="email">Usuario:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="input-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button class="button button--primary" type="submit">Iniciar sesión</button>

            <% if (typeof error !=="undefined" && error && error.trim() !=="" ) { %>
                <p class="error--text">
                    <%= error %>
                </p>
                <% } %>
                    <div class="container--return--form">
                        <p class="text--login">¿ Todavía no tenes usuario? </p>
                        <button type="button" class="button"><a href="/register">Registrate</a></button>

                    </div>
        </div>

    </form>
</section>