<form class="form--login" action="#" method="post">
    <div class="login-container">
        <div class="login-header">
            <img src="/image/logo.jpg" alt="Logo" class="logo">
        </div>
        <div class="input-group">
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="input-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button class="button button--primary" type="submit">Iniciar sesión</button>
        <div class="container--return--form">
            <p class="text--login">¿ Todavía no tenes usuario? </p>
            <button type="button" class="button"><a href="/register">Registrate</a></button>
            <p class="error--text hidden">Error al iniciar sesión</p>
        </div>

    </div>

</form>