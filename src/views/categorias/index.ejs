<table>
    <thead>
        <tr>
            <th>Nombre: </th>

        </tr>
    </thead>
    <tbody>
        <% categorias.forEach(categoria=> { %>
            <tr>
                <td><a href="/categorias/<%= categoria.id %>">
                        <%= categoria.nombre %>
                    </a></td>
                <td><a href="/categorias/<%= categoria.id %>/edit">Editar</a>
                    <form action="/categorias/<%= categoria.id %>?_method=DELETE" method="post" class="delete-form">
                        <button type="submit" class="delete-form">Borrar</button>

                    </form>
                </td>
            </tr>
            <%}) %>
    </tbody>
</table>
<script src="/js/deleteConfirmation.js" defer></script>