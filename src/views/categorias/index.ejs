<h1>Categor√≠as</h1>
<a class="button button--primary" href="/categorias/create">Crear una Categoria</a>
<section class="categorias">


    <table>
        <thead>
            <tr>
                <th>Nombre: </th>

            </tr>
        </thead>
        <tbody>
            <% categorias.forEach(categoria=> { %>
                <tr>
                    <td class="main--col"><a href="/categorias/<%= categoria.id %>">
                            <%= categoria.name %>
                        </a></td>
                    <td class="cell--inline button-col"><a href="/categorias/<%= categoria.id %>/edit">Editar</a>
                        <form action="/categorias/<%= categoria.id %>?_method=DELETE" method="post" class="delete-form">
                            <button type="submit" class="button button--danger button-delete">Borrar</button>

                        </form>
                    </td>
                </tr>
                <%}) %>
        </tbody>
    </table>
</section>
<script src="/js/deleteConfirmation.js" defer></script>